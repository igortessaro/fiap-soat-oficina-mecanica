{
    "Email": {
        "SenderAddress": "noreply@smartworkshop.com",
        "SenderName": "Oficina Smart",
        "SmtpHost": "localhost",
        "SmtpPort": 1025
    },
    "BaseUrl": "http://localhost:5180",
    "Jwt": {
        "Key": "<InsertYourSecretKeyHere>",
        "Issuer": "smartworkshop.com"
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DbConnectionString": "<InsertYourConnectionStringHere>"
    },
    "ApiSettings": {
        "Version": "v1"
    },
    "NewRelic": {
        "Enabled": true,
        "AppName": "smart-mechanical-workshop-api"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId",
            "WithEnvironmentName"
        ],
        "Properties": {
            "Application": "SmartMechanicalWorkshop"
        }
    }
}
